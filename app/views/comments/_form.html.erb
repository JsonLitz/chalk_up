<div class="col-xs-4 col-xs-offset-4 content_border">
  <div class="panel-body">
    <div class="panel-heading">
      <h1>Add a Comment!</h1>
    </div>
    <%= form_for :comment do |comment| %>
    <!-- INSERT ERROR HANDLING -->
      <div class="form-group">
        <label>Title:</label>
        <div class="form-field">
          <%= comment.text_field :title %>
        </div>
        <label>Content:</label>
        <div class="form-field">
          <%= comment.text_field :body %>
        </div>
        <br>
        <%= comment.submit "Submit Comment", :class => "btn btn-success" %>
      </div>
      
    <% end %>
  </div>
</div>
