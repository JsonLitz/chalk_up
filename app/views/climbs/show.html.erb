<%= render 'climb' %>
<div class="panel panel-default col-lg-8 col-lg-offset-2">
  <% @climb.comments.each do |comment| %>
    <div class="panel-heading">
    <h2>
      <%= comment.title %>
    </h2>
    </div>
    <div class="panel-body">

      <%= comment.body %>
    </div>
    <% if comment.user_id == session[:user_id] %>
    <%= link_to "update", edit_comment_path(comment), :class => "btn btn-primary" %>
    <%= link_to "delete", comment_path(comment), method: :delete, :class => "btn btn-default", data: { confirm: "Are you sure you want to delete this comment?" } %>
    <% end %>
  <% end %>
</div>
