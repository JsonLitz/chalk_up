<div class="row">
  <div class="col-md-10 col-md-offset-1 form_box ">

  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= @climb.image %>" class="img-responsive img-fluid">
      <div class="caption">
        <h1 class="panel-title page-header">Name:<%=@climb.name%></h1>
        <p>Rating:<%= @climb.rating %></p>
        <p>Gear: </p>
        <div class="gear_list">

        <% @climb.gear.split(", ").each do |gear| %>
          <li> <%= gear %>  </li>
          <% end %>
        </div>

        <p><%= link_to "update", edit_climb_path(@climb), :class => "btn btn-primary" %><%= link_to "delete", climb_path(@climb), method: :delete, :class => "btn btn-default" %></p>
      </div>
    </div>
  </div>
</div>
</div>
