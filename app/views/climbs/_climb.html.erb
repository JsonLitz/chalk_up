<div class="content_border">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title"><%=@climb.name%></h3>
    </div>

    <div class="panel-body">
      <div class="col-xs-4">
        <div class="thumbnail">
          <img src="<%= @climb.image %>" class="img-responsive pull-xs-left">
          <br>
          <%= link_to "update", edit_climb_path(@climb), :class => "btn btn-primary" %>
          <%= link_to "delete", climb_path(@climb), method: :delete, :class => "btn btn-default" %>
          <%= link_to "add a comment", new_comment_path(@climb), :class => "btn btn-success" %>
        </div>
      </div>
      <div class="col-xs-8">
        <div class="list-group-item">
          <p class="pull-left">Name:</p>
          <span class="climb-data"><%=@climb.name%></span>
        </div>
        <div class="list-group-item">
          <p class="pull-left">Rating:</p>
          <span class="climb-data"><%=@climb.rating%></span>
        </div>
        <div class="list-group-item">
          <p class="pull-left">Gear:</p>
          <span class="climb-data">
            <% @climb.gear.split(", ").each do |gear| %>
              <li><%= gear %></li>
            <% end %>
          </span>
        </div>
        <div class="list-group-item">
          <p class="pull-left">Style:</p>
          <span class="climb-data"><%=@climb.style%></span>
        </div>
        <div class="list-group-item">
          <p class="pull-left">Gym:</p>
          <span class="climb-data"><%=@climb.gym?%></span>
        </div>
      </div>

    </div>
  </div>
</div>
