<div class="row">
  <div class="col-md-10 col-md-offset-1 content_border ">

  <div class="col-sm-6 col-md-4 ">
    <div class="thumbnail">
      <img src="<%= @climb.image %>" class="img-responsive img-fluid">
      <div class="caption">
        <h1 class="panel-title page-header">Name:<%=@climb.name%></h1>
        <p>Rating:<%= @climb.rating %></p>
        <p>Gear: </p>
        <div class="gear_list">

        <% @climb.gear.split(", ").each do |gear| %>
          <li> <%= gear %>  </li>
          <% end %>
        </div>
        <div>
          <p>Is this a gym?
            <% if @climb.gym? == true %>
            Yes
            <% elsif @climb.gym? == false %>
            No
            <% end %>

          </p>

        </div>
        <p><%= link_to "update", edit_climb_path(@climb), :class => "btn btn-primary" %></p>
        <p><%= link_to "delete", climb_path(@climb), method: :delete, :class => "btn btn-default" %></p>
        <p><%= link_to "add a comment", new_comment_path(@climb), :class => "btn btn-success" %></p>
        <div id="form", style="width: 100px">
        <div>
      </div>
    </div>


  </div>
</div>
</div>
