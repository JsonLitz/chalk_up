<div class="card">
  <div class="card-image waves-effect waves-block waves-purple">
    <img class="activator" id="climb-img" src="<%= @climb.image %>">
  </div>
  <div class="card-content">
    <p class="card-title activator orange-text text-darken-4"><%=@climb.name%><i class="material-icons right">more_vert</i></p>
    <%= link_to new_comment_path(@climb), class: "btn waves-effect waves-light red" do %>
      <i class="material-icons right">comment</i>
      Add a Comment
    <% end %>
  </div>
  <div class="card-reveal">
    <span class="card-title orange-text text-darken-4"><%=@climb.name%><i class="material-icons right">close</i></span>
    <span class="climb-data">
      <ul class="collection">
        <li class="collection-item">Rating: V<%=@climb.rating%></li>
        <li class="collection-item">Style: <%=@climb.style%></li>
        Gear: <% @climb.gear.split(", ").each do |gear| %>
          <li class="collection-item"><%= gear %></li>
        <% end %>
        <li class="collection-item">Gym: <%=@climb.gym?%></li>
      </ul>
    </span>
  </div>
</div>
