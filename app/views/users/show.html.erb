<div class="col-md-12">
  <div class="col-md-6">
    <span class="profile">
      <div class="profile_image">
        <h1 class="test"><%= @user.username %></h1>
        <p> Member since: <%=@user.created_at.strftime("%b %-d %Y, %H:%M%p")%> </p>
        <img src="<%= @user.image%>">
      </div>
    </span>
    <%= link_to "update", edit_user_path(@user), :class => "btn btn-primary btn-sm" %>
    <%= link_to "delete", user_path(@user), method: :delete, :class => "btn btn-default btn-sm", data: { confirm: "Are you sure you want to delete your profile?" } %>
  </div>
  <div class="col-md-6 ">
    <h1>Place I've climbed</h1>
    <div class="col-md-5 user_climb_list">
      <% @climb_name.each do |climb_name| %>
        <li> <%= climb_name %> </li>
      <% end %>
      <%= link_to "Add new Location!", new_climb_path(@climb), :class => "btn btn-primary" %>
    </div>
  </div>
</div>
